<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- android:elevation="10dp"
            android:outlineProvider="bounds"-->
    <ImageView
        android:id="@+id/poster_path"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:transitionName="tposter_path"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        tools:src="@drawable/sing_poster_path"/>

    <TextView
        android:id="@+id/original_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:textAppearance="@android:style/TextAppearance.Large"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/poster_path"
        android:layout_marginLeft="8dp"
        tools:text="SING"
        android:layout_marginStart="8dp" />


    <TextView
        android:id="@+id/vote_average"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/original_title"
        tools:text="6.7"/>

    <TextView
        android:id="@+id/release_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vote_average"
        tools:text="2016-11-23"/>

    <TextView
        android:id="@+id/overview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:elevation="5dp"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poster_path"
        app:layout_constraintLeft_toLeftOf="@+id/poster_path"
        tools:text="A koala named Buster recruits his best friend to help
        him drum up business for his theater by hosting a singing competition."/>

    <TextView
        android:id="@+id/movie_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/overview"
        tools:text="335797"/>

    <Button
        android:id="@+id/favorite_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:text="Favorite"
        app:layout_constraintTop_toBottomOf="@+id/overview"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="32dp" />

    <Button
        android:id="@+id/unfavorite_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UnFavorite"
        app:layout_constraintBaseline_toBaselineOf="@+id/favorite_button"
        app:layout_constraintLeft_toRightOf="@+id/favorite_button"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />

    <ImageButton
        android:id="@+id/selector_favorite"
        android:background="@drawable/selctor_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/unfavorite_button"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/unfavorite_button"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp" />

</android.support.constraint.ConstraintLayout>